<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d" Topmost="True"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:ItemVisibilityConverter x:Key="ItemVisibilityConverter"/>
        <DataTemplate DataType="{x:Type local:Item}" x:Key="ItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Name}" Grid.Column="0"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="ItemList"
                 ItemsSource="{Binding ShoppingList}" 
                 SelectedItem="{Binding SelectedItem}"
                 ItemTemplate="{StaticResource ItemTemplate}"
                 Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

        <TextBlock Text="Shopping List" 
                   FontSize="22" 
                   FontWeight="Heavy" 
                   FontStyle="Italic" 
                   HorizontalAlignment="Center"
                   Grid.Row="0" Grid.ColumnSpan="2"/>

        <TextBox Text="{Binding NewName}"
                 Grid.Row="2" Grid.Column="0" >
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" 
                            Command="{Binding AddItem}" 
                             CommandParameter="{Binding Text, ElementName=NewItem}"/>
            </TextBox.InputBindings>
        </TextBox>

        <Button Content="Add Item"
                Command="{Binding AddItemCommand}" 
                CommandParameter="{Binding Text, ElementName=NewItem}"
                Grid.Row="3" Grid.Column="0"/>

        <DockPanel Visibility="{Binding SelectedItem, Converter={StaticResource ItemVisibilityConverter}}"
                   Grid.Row="2" Grid.Column="1"
                   Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TextBlock Text="Edit Name:" Background="Gray"/>
            <TextBox Text="{Binding SelectedItem.Name, UpdateSourceTrigger=PropertyChanged}"/>

        </DockPanel>
    </Grid>
</Window>
