<!-- Color reference: https://www.designwizard.com/wp-content/uploads/2019/03/colorCombination_60.jpg -->
    <Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        MinHeight="350"
        MinWidth="800"
        Title="Shopping List" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Column 0 LIST BOX -->
        <ListBox x:Name="listBox" Grid.Column="0" Background="#FFF65158"
                 SelectionMode="Single" SelectionChanged="listBoxChanged" Foreground="#FF28324B" FontSize="24" FontFamily="Ink Free"/>

        <!-- Column 2 LIST CONTROLS -->
        <Button x:Name="btnAdd" Content="Add To List" Grid.Column="1" HorizontalAlignment="Left" Margin="281,42,0,0" VerticalAlignment="Top" Foreground="#FFFBDE44" Click="btnAdd_Click"/>
        <TextBox x:Name="txtToAdd" Grid.Column="1" HorizontalAlignment="Left" Margin="20,46,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" SelectionBrush="#FFFBDE44" Foreground="#FF28324B"/>

    </Grid>
</Window>
