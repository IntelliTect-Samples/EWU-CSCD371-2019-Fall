<!-- Color reference: https://www.designwizard.com/wp-content/uploads/2019/03/colorCombination_60.jpg -->
    <Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        MinHeight="350"
        MinWidth="650"
        TextElement.FontSize="24"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        Title="Shopping List" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1"/>
        <StackPanel Grid.Column="2"/>

    <!-- Column 0 & Row 0-* LIST BOX -->
        <ListBox ItemsSource="{Binding ShoppingList}" Grid.Column="0" Grid.RowSpan="3" Background="{Binding Tomato}"
                 SelectionMode="Single" Foreground="White" FontFamily="Ink Free">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type local:Item}">
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    <!-- Column 2 LIST CONTROLS -->
        <!-- Row 0 LIST CONTROLS -->
        <TextBox Grid.Column="1" Text="{Binding TextToAddToList}" TextWrapping="Wrap" SelectionBrush="{Binding Sandy}" Foreground="{Binding SlateGray}" Margin="{Binding Margins}"/>

        <!-- Column 3 LIST CONTROLS -->
        <!-- Row 0 LIST CONTROLS -->
        <Button Command="{Binding AddItemCommand}" Content="Add To List" Grid.Column="2" Foreground="{Binding Sandy}" Background="{Binding SlateGray}" Margin="{Binding Margins}"/>

    </Grid>
</Window>
