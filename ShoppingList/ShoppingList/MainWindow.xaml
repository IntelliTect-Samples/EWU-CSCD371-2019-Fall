<!-- Color reference: https://www.designwizard.com/wp-content/uploads/2019/03/colorCombination_60.jpg -->
    <Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        MinHeight="350"
        MinWidth="650"
        TextElement.FontSize="24"
        Title="Shopping List" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1"/>
        <StackPanel Grid.Column="2"/>

        <!-- Column 0 & Row 0-1 LIST BOX -->
        <ListBox x:Name="ShoppingList" Grid.Column="0" Grid.RowSpan="2" Background="#FFF65158"
                 SelectionMode="Single" SelectionChanged="listBoxChanged" Foreground="#FF28324B" FontFamily="Ink Free"/>

        <!--   Row 0 LIST CONTROLS  -->
        <!-- Column 2 LIST CONTROLS -->
        <TextBox x:Name="TxtToAddToList" Grid.Column="1" Text="" TextWrapping="Wrap" SelectionBrush="#FFFBDE44" Foreground="#FF28324B" CaretBrush="#FF28324B" Margin="10,10,10,10"/>

        <!-- Column 3 LIST CONTROLS -->
        <Button x:Name="BtnAddToList" Content="Add To List" Grid.Column="2" Foreground="#FFFBDE44" Click="btnAdd_Click" Background="#FF28324B" BorderBrush="#FF28324B" Margin="10,10,10,10"/>

    </Grid>
</Window>
