<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <local:VisibilityConverter x:Key="converter"/>

        <DataTemplate DataType="{x:Type local:Item}" x:Key="ItemTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" >
            <TextBlock Text="Name:" FontSize="16" Margin="10,0,0,0" />
            <TextBox Text="{Binding NewItemName}" FontSize="16" TextAlignment="Center" Height="35"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Visibility="{Binding SelectedItem, Converter={StaticResource converter}}">
            <TextBlock Text="Selected Item:" FontSize="20" TextAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBlock.TextDecorations>
                    <TextDecoration/>
                </TextBlock.TextDecorations>
            </TextBlock>
            <TextBlock Text="Name:" FontSize="16" Margin="10,0,0,0" />
            <TextBox Text="{Binding SelectedItem.Name}" FontSize="16" TextAlignment="Center" Height="35"/>
            <Button x:Name="ChangeItemNameBtn" HorizontalAlignment="Stretch" Width="178" Height="35" Content="Change Item Name" FontSize="16" Grid.Row="1" Margin="0,30,0,0"/>
        </StackPanel>

        <Button x:Name="AddItemBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="100" Height="35" Content="Add Item" FontSize="16" Grid.Row="0" Command="{Binding AddItemCommand}"/>
        <ListBox x:Name="ItemList" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" ItemTemplate="{StaticResource ItemTemplate}" Grid.Column="1" Grid.RowSpan="2"/>
    </Grid>
</Window>
