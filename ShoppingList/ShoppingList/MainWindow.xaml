<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="800">


    <Window.Resources>



        <DataTemplate DataType="{x:Type local:ShoppingItem}" x:Key="ShoppingItemTemplate">
            <StackPanel>
                <TextBlock Text="{Binding ItemName}">
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        
        <StackPanel Grid.Row="1"  Grid.Column="1" Background="AliceBlue">
            <TextBlock Text="Edit Item"></TextBlock>
            <TextBox Text="{Binding SelectedItem.ItemName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Background="Fuchsia">
            <TextBlock Text="New Item"></TextBlock>
            <TextBox Text="{Binding NewShoppingItem}"/>
            <Button Command="{Binding AddShoppingItemCommand}">
                <TextBlock Text="Add Item" />
            </Button>
        </StackPanel>

        <ListBox ItemsSource="{Binding ShoppingList}" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" x:Name="ShoppingListList"
                 SelectedItem="{Binding SelectedItem}" ItemTemplate="{StaticResource ShoppingItemTemplate}" />
    </Grid>
</Window>
